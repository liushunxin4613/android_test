<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="@dimen/margin_10" >

    <TextView
        android:id="@+id/item_notice0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin_less"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_notice1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/view_margin_less"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_notice2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/view_margin_less"
            android:layout_marginBottom="@dimen/view_margin_less"
            android:layout_marginLeft="@dimen/margin_20"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>