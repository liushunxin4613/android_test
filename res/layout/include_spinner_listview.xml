<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/view_margin_less" >

            <Spinner
                android:id="@+id/splv_sp0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line_gray" />

            <Spinner
                android:id="@+id/splv_sp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line_gray" />

            <Spinner
                android:id="@+id/splv_sp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />
        </LinearLayout>
    </LinearLayout>

    <customLib.DynamicListView
        android:id="@+id/splv_dylistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_press"
        android:divider="@null"
        android:dividerHeight="@dimen/view_margin_small"
        android:drawSelectorOnTop="true"
        android:paddingLeft="@dimen/view_margin_small"
        android:paddingRight="@dimen/view_margin_small"
        android:scrollbars="none" >
    </customLib.DynamicListView>

</LinearLayout>